---
import { getCollection } from 'astro:content';
import Container from '@/components/Container.astro';
import Layout from '@/layouts/Layout.astro';
import Link from '@/components/Link.astro';
import { dateRange } from '@/lib/utils';
import { SITE, SOCIALS } from '@/consts';
import { stripLangFromSlug, useTranslations } from '@/i18n/utils';

export async function getStaticPaths() {
  return [{ params: { lang: 'es' } }, { params: { lang: 'en' } }];
}

const { lang } = Astro.params as { lang: 'en' | 'es' };
const t = useTranslations(lang);

const blog = (await getCollection('blog'))
  .filter((post) => !post.data.draft && post.data.lang === lang)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, SITE.NUM_POSTS_ON_HOMEPAGE);

const projects = (await getCollection('projects'))
  .filter((project) => !project.data.draft && project.data.lang === lang)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, SITE.NUM_PROJECTS_ON_HOMEPAGE);

const allwork = (await getCollection('work'))
  .filter((work) => work.data.lang === lang)
  .sort(
    (a, b) =>
      new Date(b.data.dateStart).valueOf() -
      new Date(a.data.dateStart).valueOf(),
  )
  .slice(0, SITE.NUM_WORKS_ON_HOMEPAGE);

const work = allwork;

const entryHref = (entry: {
  slug: string;
  collection: string;
  data: { lang: 'en' | 'es' };
}) => {
  if (entry.collection !== 'work') {
    return `/${entry.data.lang}/${entry.collection}/${stripLangFromSlug(entry.slug, entry.data.lang)}`;
  }
  return `/${entry.data.lang}/${entry.collection}`;
};

const stack = [
  'JavaScript/TypeScript',
  'Python',
  'Go',
  'PostgreSQL',
  'Redis',
  'Docker',
  'MongoDB',
];
---

<Layout title="Home" description={t('blog.description')}>
  <Container>
    <!-- Hero Section -->
    <section class="mb-20">
      <div class="flex items-start gap-2 mb-4 animate">
        <span class="status-badge">
          {lang === 'en' ? 'Available for work' : 'Disponible'}
        </span>
      </div>
      <h1
        class="mb-4 font-bold text-(--text-primary) text-3xl md:text-4xl animate-delay-1 animate"
      >
        {t('home.greeting')}
      </h1>
      <div class="space-y-4 max-w-2xl text-base md:text-lg leading-relaxed">
        <p class="animate-delay-2 animate">
          {t('home.description.p1')}
          {t('home.description.p2')}
        </p>
        <p class="animate-delay-3 animate">
          {t('home.description.p3')}
        </p>
      </div>

      <!-- Tech Stack Pills -->
      <div class="flex flex-wrap gap-2 mt-6 animate-delay-4 animate">
        {
          stack.map((tech) => (
            <span class="bg-(--surface-elevated) px-3 py-1 border border-(--border) rounded-full font-medium text-(--text-secondary) text-xs">
              {tech}
            </span>
          ))
        }
      </div>
    </section>

    <div class="space-y-16">
      <!-- Latest Posts -->
      <section class="animate-delay-5 animate">
        <div class="flex flex-wrap justify-between items-center gap-y-2 mb-6">
          <h2 class="section-title">
            {t('home.latestPosts')}
          </h2>
          <a href={`/${lang}/blog`} class="link-arrow">
            {t('home.seeAllPosts')}
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="16"
              height="16"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <path d="M5 12h14"></path><path d="m12 5 7 7-7 7"></path>
            </svg>
          </a>
        </div>
        {
          blog.length === 0 ? (
            <div class="p-8 border border-(--border) border-dashed rounded-xl text-(--text-secondary) text-sm text-center">
              {t('empty.blog')}
            </div>
          ) : (
            <ul class="flex flex-col gap-4">
              {blog.map((entry, i) => (
                <li style={`animation-delay: ${(i + 1) * 100}ms`}>
                  <a
                    href={entryHref(entry)}
                    class="group block p-5 card-interactive"
                  >
                    <div class="z-10 relative">
                      <div class="flex justify-between items-start gap-4">
                        <div class="flex-1">
                          <h3 class="mb-1 font-semibold text-(--text-primary) group-hover:text-(--accent) transition-colors">
                            {entry.data.title}
                          </h3>
                          <p class="text-(--text-secondary) text-sm line-clamp-2">
                            {entry.data.description}
                          </p>
                        </div>
                        <svg
                          xmlns="http://www.w3.org/2000/svg"
                          width="20"
                          height="20"
                          viewBox="0 0 24 24"
                          fill="none"
                          stroke="currentColor"
                          stroke-width="2"
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          class="shrink-0 mt-1 text-(--text-secondary) group-hover:text-(--accent) transition-all group-hover:translate-x-1"
                        >
                          <path d="M5 12h14" />
                          <path d="m12 5 7 7-7 7" />
                        </svg>
                      </div>
                    </div>
                  </a>
                </li>
              ))}
            </ul>
          )
        }
      </section>

      <!-- Work Experience -->
      <section class="animate">
        <div class="flex flex-wrap justify-between items-center gap-y-2 mb-6">
          <h2 class="section-title">
            {t('home.workExperience')}
          </h2>
          <a href={`/${lang}/work`} class="link-arrow">
            {t('home.seeAllWork')}
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="16"
              height="16"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <path d="M5 12h14"></path><path d="m12 5 7 7-7 7"></path>
            </svg>
          </a>
        </div>
        {
          work.length === 0 ? (
            <div class="p-8 border border-(--border) border-dashed rounded-xl text-(--text-secondary) text-sm text-center">
              {t('empty.work')}
            </div>
          ) : (
            <ul class="flex flex-col gap-4">
              {work.map((entry) => (
                <li>
                  <a
                    href={entryHref(entry)}
                    class="group block p-5 card-interactive"
                  >
                    <div class="z-10 relative">
                      <div class="flex flex-wrap justify-between items-start gap-x-4 gap-y-1">
                        <div class="flex-1 min-w-0">
                          <h3 class="font-semibold text-(--text-primary) group-hover:text-(--accent) transition-colors">
                            {entry.data.company}
                          </h3>
                          <p class="text-(--text-secondary) text-sm">
                            {entry.data.role}
                          </p>
                        </div>
                        <span class="px-2 py-1 rounded font-mono text-(--accent) text-xs whitespace-nowrap bg-(--accent-muted)">
                          {dateRange(entry.data.dateStart, entry.data.dateEnd)}
                        </span>
                      </div>
                    </div>
                  </a>
                </li>
              ))}
            </ul>
          )
        }
      </section>

      <!-- Recent Projects -->
      <section class="animate">
        <div class="flex flex-wrap justify-between items-center gap-y-2 mb-6">
          <h2 class="section-title">
            {t('home.recentProjects')}
          </h2>
          <a href={`/${lang}/projects`} class="link-arrow">
            {t('home.seeAllProjects')}
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="16"
              height="16"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <path d="M5 12h14"></path><path d="m12 5 7 7-7 7"></path>
            </svg>
          </a>
        </div>
        {
          projects.length === 0 ? (
            <div class="p-8 border border-(--border) border-dashed rounded-xl text-(--text-secondary) text-sm text-center">
              {t('empty.projects')}
            </div>
          ) : (
            <ul class="gap-4 grid sm:grid-cols-2">
              {projects.map((entry) => (
                <li>
                  <a
                    href={entryHref(entry)}
                    class="group block p-5 h-full card-interactive"
                  >
                    <div class="z-10 relative flex flex-col h-full">
                      <div class="flex items-center gap-2 mb-2">
                        <div class="flex justify-center items-center rounded-lg w-8 h-8 bg-(--accent-muted)">
                          <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="16"
                            height="16"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            class="text-(--accent)"
                          >
                            <path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z" />
                          </svg>
                        </div>
                        <h3 class="font-semibold text-(--text-primary) group-hover:text-(--accent) transition-colors">
                          {entry.data.title}
                        </h3>
                      </div>
                      <p class="flex-1 text-(--text-secondary) text-sm">
                        {entry.data.description}
                      </p>
                    </div>
                  </a>
                </li>
              ))}
            </ul>
          )
        }
      </section>

      <!-- Let's Connect -->
      <section class="animate">
        <div
          class="bg-(--surface-elevated) p-6 md:p-8 border border-(--border) rounded-2xl"
        >
          <h2 class="mb-4 section-title">
            {t('home.letsConnect')}
          </h2>
          <p class="mb-6 max-w-lg text-(--text-secondary)">
            {t('home.connectMessage')}
          </p>
          <div class="flex flex-wrap gap-3">
            {
              SOCIALS.map((SOCIAL) => (
                <a
                  href={SOCIAL.HREF}
                  target="_blank"
                  rel="noopener noreferrer"
                  aria-label={`${SITE.NAME} on ${SOCIAL.NAME}`}
                  class="social-pill"
                >
                  {SOCIAL.NAME === 'github' && (
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      width="16"
                      height="16"
                      viewBox="0 0 24 24"
                      fill="currentColor"
                    >
                      <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
                    </svg>
                  )}
                  {SOCIAL.NAME === 'x' && (
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      width="14"
                      height="14"
                      viewBox="0 0 24 24"
                      fill="currentColor"
                    >
                      <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z" />
                    </svg>
                  )}
                  {SOCIAL.NAME === 'linkedin' && (
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      width="16"
                      height="16"
                      viewBox="0 0 24 24"
                      fill="currentColor"
                    >
                      <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z" />
                    </svg>
                  )}
                  {SOCIAL.NAME.charAt(0).toUpperCase() + SOCIAL.NAME.slice(1)}
                </a>
              ))
            }
            <a
              href={`mailto:${SITE.EMAIL}`}
              aria-label={`Email ${SITE.NAME}`}
              class="social-pill"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="16"
                height="16"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <rect width="20" height="16" x="2" y="4" rx="2"></rect><path
                  d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"></path>
              </svg>
              Email
            </a>
          </div>
        </div>
      </section>
    </div>
  </Container>
</Layout>
